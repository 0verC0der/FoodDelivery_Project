            <div class="cart-items">
                <% if (cartItems.length > 0) { %>
                    <% cartItems.forEach(item => { %>
                        <div class="cart-item">
                            <img src="<%= item.mealImageUrl %>" alt="<%= item.mealName %>" class="item-image">
