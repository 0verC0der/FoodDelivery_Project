    </main>

    <script>
        function showMessage(text) {
            const messageDiv = document.getElementById('message');
            messageDiv.textContent = text;
            messageDiv.classList.remove('hidden');
            messageDiv.classList.add('show');
        
            setTimeout(() => {
                messageDiv.classList.remove('show');
                messageDiv.classList.add('hidden');
            }, 2000); // –ü—Ä–∏–±—Ä–∞—Ç–∏ —á–µ—Ä–µ–∑ 2 —Å–µ–∫—É–Ω–¥–∏
        }
        
        document.addEventListener('DOMContentLoaded', () => {
            const updateQuantity = async (cartItemId, delta, quantityElement, pricePerItem) => {
                try {
                    const response = await fetch('/cart/change', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ cartItemId, delta })
                    });
        
                    if (response.ok) {
                        // –û–Ω–æ–≤–ª—é—î–º–æ –∫—ñ–ª—å–∫—ñ—Å—Ç—å –±–µ–∑ –ø–µ—Ä–µ–∑–∞–≤–∞–Ω—Ç–∞–∂–µ–Ω–Ω—è
                        let currentQuantity = parseInt(quantityElement.textContent);
                        currentQuantity += delta;
                        if (currentQuantity < 1) currentQuantity = 1;
                        quantityElement.textContent = currentQuantity;
        
                        // –û–Ω–æ–≤–ª—é—î–º–æ –∑–∞–≥–∞–ª—å–Ω—É —Å—É–º—É
                        recalculateTotal();
                        
                        if (currentQuantity > 1) {
                            showMessage('‚úÖ –ö—ñ–ª—å–∫—ñ—Å—Ç—å –æ–Ω–æ–≤–ª–µ–Ω–æ!');
                        } 
                    } 
                    else {
                        showMessage('‚ùå –ù–µ –≤–¥–∞–ª–æ—Å—è –æ–Ω–æ–≤–∏—Ç–∏ –∫—ñ–ª—å–∫—ñ—Å—Ç—å');
                    }
                } catch (error) {
                    console.error('–ü–æ–º–∏–ª–∫–∞ –æ–Ω–æ–≤–ª–µ–Ω–Ω—è:', error);
                    showMessage('‚ùå –ü–æ–º–∏–ª–∫–∞ —Å–µ—Ä–≤–µ—Ä–∞');
                }
            };
        
            const recalculateTotal = () => {
                let total = 0;
                document.querySelectorAll('.cart-item').forEach(item => {
                    const price = parseFloat(item.querySelector('h2 + p').textContent.replace('–¶—ñ–Ω–∞: ', '').replace(' –≥—Ä–Ω', ''));
                    const quantity = parseInt(item.querySelector('.quantity').textContent);
                    total += price * quantity;
                });
        
                const totalElement = document.querySelector('.cart-summary h2');
                if (totalElement) {
                    totalElement.textContent = `–ó–∞–≥–∞–ª—å–Ω–∞ —Å—É–º–∞: ${total} –≥—Ä–Ω`;
                } 
                if (total === 0) {
                    totalElement.textContent = `–í–∞—à–∞ –∫–æ—Ä–∑–∏–Ω–∫–∞ –ø–æ—Ä–æ–∂–Ω—è.`;
                    document.querySelector('.checkout-button').style.display = 'none';
                }
            };
        
            // –ó–±—ñ–ª—å—à–µ–Ω–Ω—è –∫—ñ–ª—å–∫–æ—Å—Ç—ñ
            document.querySelectorAll('.increase-quantity').forEach(button => {
                button.addEventListener('click', () => {
                    const cartItemId = button.getAttribute('data-id');
                    const quantityElement = button.parentElement.querySelector('.quantity');
                    const pricePerItem = parseFloat(button.closest('.cart-item').querySelector('h2 + p').textContent.replace('–¶—ñ–Ω–∞: ', '').replace(' –≥—Ä–Ω', ''));
                    updateQuantity(cartItemId, 1, quantityElement, pricePerItem);
                });
            });
        
            // –ó–º–µ–Ω—à–µ–Ω–Ω—è –∫—ñ–ª—å–∫–æ—Å—Ç—ñ
            document.querySelectorAll('.decrease-quantity').forEach(button => {
                button.addEventListener('click', () => {
                    const cartItemId = button.getAttribute('data-id');
                    const quantityElement = button.parentElement.querySelector('.quantity');
                    const pricePerItem = parseFloat(button.closest('.cart-item').querySelector('h2 + p').textContent.replace('–¶—ñ–Ω–∞: ', '').replace(' –≥—Ä–Ω', ''));
                    updateQuantity(cartItemId, -1, quantityElement, pricePerItem);
                });
            });
            
            // –í–∏–¥–∞–ª–µ–Ω–Ω—è —Ç–æ–≤–∞—Ä—É
            document.querySelectorAll('.remove-item').forEach(button => {
                button.addEventListener('click', async () => {
                    const cartItemId = button.getAttribute('data-id');
                    try {
                        const response = await fetch('/cart/delete', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({ cartItemId })
                        });
        
                        if (response.ok) {
                            button.closest('.cart-item').remove();
                            recalculateTotal();
                            showMessage('üóëÔ∏è –¢–æ–≤–∞—Ä –≤–∏–¥–∞–ª–µ–Ω–æ');
                        } else {
                            showMessage('‚ùå –ù–µ –≤–¥–∞–ª–æ—Å—è –≤–∏–¥–∞–ª–∏—Ç–∏ —Ç–æ–≤–∞—Ä');
                        }
                    } catch (error) {
                        console.error('–ü–æ–º–∏–ª–∫–∞ –≤–∏–¥–∞–ª–µ–Ω–Ω—è:', error);
                        showMessage('‚ùå –ü–æ–º–∏–ª–∫–∞ —Å–µ—Ä–≤–µ—Ä–∞');
                    }
                });
            });
        });
        
        // –§—É–Ω–∫—Ü—ñ—è –¥–ª—è —Å–ø–æ–≤—ñ—â–µ–Ω–Ω—è
        function showMessage(text) {
            const messageDiv = document.getElementById('message');
            messageDiv.textContent = text;
            messageDiv.classList.remove('hidden');
            messageDiv.classList.add('show');
        
            setTimeout(() => {
                messageDiv.classList.remove('show');
                messageDiv.classList.add('hidden');
            }, 2000);
        }        
</script>
        
